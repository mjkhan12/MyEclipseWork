
public class Factorial {
	public static void main(String args[]) {
	
		
		System.out.println(factorial(120));
	}
	
	public static String factorial (int number) {
		int i = 2 ; 
		boolean factorFound  = false; 
		String result = "none"; 
		 
		while (!factorFound) {
			number = number/i;
			if (number == 1 ) {
				result = i + "!";
				factorFound  = true;
			} 
			else if(number == 0) {
				result = "none";
				factorFound  = true;
			}else {
				i++;
			}
		}
		
		
		return result;
	}

	
}
